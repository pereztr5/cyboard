{{ define "content" }}
<h3 class="page-header">{{ title .Title }}</h3>
<div class="row">
    <div class="col-md-4 col-xs-6">
        <div id="challenge-list">
            {{ range $idx, $chal := .Data.Challenges -}}
                <button
                    type='button'
                    class='btn btn-default btn-block'
                    data-toggle='modal'
                    data-target='#currentChallenge'
                    onclick='makeModal(challenges[$idx])'>
                {{- $chal.Name -}}
                </button>
            {{- end }}
        </div>
        <div id="hiddenModal"></div>
    </div>
</div>
{{ end }}

{{ define "scripts" }}
<script src="/assets/js/flag.js"></script>
{{ end }}
