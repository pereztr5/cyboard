{{ define "content" }}
{{ template "event-config" . }}
<hr/>
{{ template "services-table" . }}

{{ template "bs-services-edit-modal" }}
{{ end }}

{{ define "event-config" }}
<h5>Event Configuration <small>- from the server</small></h5>
<dl class="dl-horizontal">
  <dt>Event Start:</dt><dd>{{timestamp .Data.Event.Start}}</dd>
  <dt>Event End:</dt><dd>{{timestamp .Data.Event.End}}</dd>
  {{ with .Data.ServiceMonitor}}
    <dt>Team router IP Prefix:</dt><dd>{{.BaseIP}}</dd>
    <dt>Check Interval:</dt><dd>{{.Intervals}}</dd>
    <dt>Timeout:</dt><dd>{{.Timeout}}</dd>
  {{ end }}
</dl>
{{ end }}

{{ define "services-table" }}
<h5>All Service Checks</h5>
<div class="services-controls">
  <!-- TODO: Inputs for sorting, filtering, etc. -->
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover config-table services-config-table">
    <thead><tr>
      <th>ID</th>
      <th>Name</th>
      {{/* <th>Category</th> */}}
      <th>Description</th>
      <th>Starts At</th>
      <th>Points</th>
      <th>Script</th>
      <th>Args</th>
      <th>Disabled</th>
      <th>Last Modified</th>
      <th>Controls</th>
    </tr></thead>
    <tbody>
      {{ range .Data.Services }}
      <tr data-service-id='{{.ID}}'>
        <td>{{.ID}}</td>
        <td>{{.Name}}</td>
        <td>{{.Description}}</td>
        <td>{{timestamp .StartsAt}}</td> <!-- TODO: highlight checks that have started? -->
        <td>{{.TotalPoints}}</td>
        <td>{{.Script}}</td>
        <td>{{StringsJoin .Args " "}}</td> <!-- TODO: highlight variable args, like {TEAM_NAME}, and {IP} -->
        <td>{{if .Disabled}}<i class="fa fa-lg fa-minus-circle text-danger" title="DISABLED"></i>{{end}}</td>
        <td>{{timestamp .ModifiedAt}}</td>
        <th><div class="btn-group btn-group-sm">
          <button type="button" class="btn btn-warning btn-edit">
            <i class="fa fa-pencil"></i>
          </button>
        </div></th>
      </tr>
      {{ end }}
    </tbody>
  </table>
</div>
<div class="row">
  <p class="col-md-3">
    <button type="button" class="btn btn-default btn-block btn-add-service"
      data-toggle="modal" data-target="#service-edit-modal">
        <!-- TODO: I think fa can stack plus and server icon. -->
      <i class="fa fa-server"></i> Add New Service Check
    </button>
  </p>
  <p class="col-md-offset-7 col-md-2">
    <a href="/admin/services/scripts" class="btn btn-default btn-block">
      <i class="fa fa-file"></i> View Scripts
    </a>
  </p>
</div>

<datalist id="service-scripts-list">
  {{range .Data.ScriptFiles}}
  <option value="{{.Name}}">
  {{ end }}
</datalist>
{{ end }}

{{ define "bs-services-edit-modal" }}
<div class="modal fade" id="service-edit-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        <h4 class="modal-title">Edit [Check]</h4>
      </div>
      <form>
        <div class="modal-body">
          <input name="id" type="hidden" value="-1" >
          <div class="form-group">
            <label for="name" class="control-label">Name:</label>
            <input name="name" class="form-control" type="text" required>
          </div>
          <div class="form-group">
            <label for="description" class="control-label">Description (internal only):</label>
            <input name="description" class="form-control" type="text">
          </div>
          <div class="form-group">
            <label for="total_points" class="control-label">Total Points:</label>
            <input name="total_points" class="form-control" type="number" required>
            <!-- Include sub points? -->
          </div>
          <div class="form-group">
            <fieldset>
              <legend>Starting Time</legend>
              <div class="col-md-6">
                <label for="starts_at_date" class="control-label">Date:</label>
                <input name="starts_at_date" class="form-control" type="date" required>
              </div>
              <div class="col-md-6">
                <label for="starts_at_time" class="control-label">Time:</label>
                <input name="starts_at_time" class="form-control" type="time" required>
              </div>
            </fieldset>
          </div>
          <div class="form-group">
            <fieldset>
              <legend>Command w/ Args</legend>
              <div class="col-md-6">
                <label for="script" class="control-label">Script:</label>
                <input name="script" class="form-control" type="text"
                       list="service-scripts-list" placeholder="ping_check.sh" required>
              </div>
              <div class="col-md-6">
                <label for="args" class="control-label">Arguments:</label>
                <input name="args" class="form-control" type="text">
                <p class="help-block">Special args available: {IP}, {TEAM_ID}, {TEAM_NAME}, {TEAM_4TH_OCTET}</p>
              </div>
            </fieldset>
          </div>
          <hr/>
          <div class="form-group">
            <label for="disabled" class="control-label">Disabled:</label>
            <input name="disabled" type="checkbox">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger delete-service">Delete</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
{{ end }}

{{ define "styles" }}
  <link rel="stylesheet" href="/assets/css/staff/model-editors.css">
{{ end }}

{{ define "scripts" }}
  <script src="/assets/bootstrap-dialog/bootstrap-dialog.min.js"></script>
  <script src="/assets/js/staff/admin-utils.js"></script>
  <script src="/assets/js/staff/services.js"></script>
{{ end }}
