{{ define "base" -}}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CNYHackathon</title>
    <link rel="icon" href="data:,"> {{/* empty favicon */}}
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/custom.css">
    {{- block "styles" . -}}{{ end }}
</head>
<body>
    {{- template "navbar"  . -}}
    {{- if .Error }}
        {{- template "oopsie" . }}
    {{- else }}
        {{-    block "content" . -}}{{ end }}
    {{- end }}
    {{- template "footer"  . -}}
</body>
</html>
{{ end }}

{{ define "navbar" }}
    <div class="container">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header"><a class="navbar-brand navbar-link" href="https://www.cnyhackathon.org/">CNY Hackathon</a>
                    <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                </div>
                <div class="collapse navbar-collapse" id="navcol-1">
                    <ul class="nav navbar-nav navbar-left">
                        <li role="presentation"><a href="/">Home </a></li>
                        <li role="presentation"><a href="/scoreboard">Scoreboard</a></li>
                        <!-- <li role="presentation"><a href="/services">Services</a></li> -->
                        <li role="presentation"><a href="/challenges">Challenges</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {{ if .T }}
                        <li role="presentation" class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                                {{ .T.Name }}<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="download">
                                {{ if isCtfStaff .T}}
                                    <li><a href="/staff/ctf_dashboard"><i class="fa fa-tachometer"></i> CTF Dashboard</a></li>
                                    <li><a href="/staff/ctf"><i class="fa fa-flag"></i> Edit CTF Challenges</a></li>
                                {{ end }}
                                {{ if isAdmin .T}}
                                    <li><a href="/admin/teams"><i class="fa fa-user-plus"></i> Edit Teams</a></li>
                                    <li><a href="/admin/services"><i class="fa fa-server"></i> Edit Checks</a></li>
                                    <li><a href="/admin/bonuses"><i class="fa fa-star"></i> Award/Dock Points</a></li>
                                    <li><a href="/admin/logs"><i class="fa fa-tree"></i> Logs</a></li>
                                {{ end }}
                                {{ if isBlueteam .T}}
                                    <li><a href="/dashboard">Dashboard</a></li>
                                {{ end }}
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </li>
                        {{ else }}
                        <li role="presentation"><a href="/login">Login </a></li>
                        {{ end }}
                    </ul>
                </div>
            </div>
        </nav>
{{/* container div is left dangling for convenience */}}
{{- end }}

{{ define "oopsie" }}
<div class="jumbotron">
    <h2>Oh no...</h2>
    <div class="row text-center">
        <p>ðŸ’€ Something went wrong... ðŸ’€</p>
        <p>Pinch yourself to make sure you're still breathing.</p>
        {{- if isAdmin .T }}<p class="error">Error: {{ .Error }}</p>{{ end }}
    </div>
</div>
{{- end }}

{{ define "footer" }}
    </div>

    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    {{- block "scripts" . -}}{{ end }}
{{- end }}
